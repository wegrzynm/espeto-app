{% extends 'base.html.twig' %}

{% block title %}Alumnos{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
  <h1>Logo</h1>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Ciudad</th>
                <th>Curso</th>
                <th>Date/fetcha</th>
            </tr>
        </thead>
        <tbody>
        {% if participants|length > 0  %}
            {% for participant in participants %}
                <tr>
                    <td>
                        {{ participant.name }}
                    </td>
                    <td>
                        {{ participant.address.city }}
                    </td>
                    <td>
                        {{ participant.contest.name }}
                    </td>
                    <td>
                        {{ participant.date|format('d/m/Y') }}
                    </td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td>No data</td>
            </tr>
        {% endif %}
        </tbody>
    </table>
</div>
{% endblock %}
