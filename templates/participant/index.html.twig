{% extends 'base.html.twig' %}

{% block title %}{{ 'Participants'|trans }}{% endblock %}

{% block body %}
<style>
    .example-wrapper {
      margin: 1em auto;
      max-width: 800px;
      width: 95%;
      font: 18px/1.5 sans-serif;
      background-color: #f9f9f9;
      padding: 2em;
      border-radius: 5px;
    }

    table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      border: 1px solid #ddd;
      padding: 0.75em;
      text-align: left;
    }

    th {
      background-color: #4CAF50;
      color: white;
      font-weight: bold;
    }

    tr:nth-child(even) {
      background-color: #f2f2f2
    }

    tr:hover {
      background-color: #ddd;
    }

    thead th {
      position: sticky;
      top: 0;
      background-color: #4CAF50;
      color: white;
      font-weight: bold;
    }
    .full-width-button {
        display: block;
        width: 100%;
        background-color: #4CAF50;
        border: none;
        color: white;
        padding: 0.75em;
        text-align: center;
        text-decoration: none;
        border-radius: 5px;
        font-size: 18px;
        margin: 1em auto;
        cursor: pointer;
    }

    .full-width-button:hover {
        background-color: #3e8e41;
    }
</style>

<div class="example-wrapper">
  <h1>Logo</h1>
    <div class="button-container">
        <button class="full-width-button">
            <a href="{{ path('app_main') }}">{{ 'Go back'|trans }}</a>
        </button>
    </div>
    <table>
        <thead>
            <tr>
                <th>{{ 'Name'|trans }}</th>
                <th>{{ 'City'|trans }}</th>
                <th>{{ 'Contest'|trans }}</th>
                <th>{{ 'Date'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% if participants|length > 0  %}
            {% for participant in participants %}
                <tr>
                    <td>
                        {{ participant.name }}
                    </td>
                    <td>
                        {{ participant.contest.city }}
                    </td>
                    <td>
                        {{ participant.contest.name }}
                    </td>
                    <td>
                        {{ participant.contest.date|date('d/m/Y') }}
                    </td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td>{{ 'No data'|trans }}</td>
            </tr>
        {% endif %}
        </tbody>
    </table>
</div>
{% endblock %}
